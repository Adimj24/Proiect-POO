#include <iostream>

using namespace std;

class IntSet{ // asta am de luat de aici
private:

   int *v,nr=0,indice=0;

public:

    IntSet(int dim)
    {
        nr=dim;
        v = new int[dim];
    }

    bool contains(int);
    IntSet stergere(int);
    IntSet add(int);
    int lungime();
    void afisare();

};
void IntSet:: afisare() // si asta
{
    int i;
    cout<<'\n'<<"Multimea: "; // Afisam pe ecran ce se cere

    for (i=0 ; i<indice ; i++)
        cout<<v[i]<<" "; // Se afiseaza multimea

    cout<<'\n';  // Dam Enter
}

int IntSet:: lungime() // si asta de asemenea
{
  return indice; // Returnam lungimea
}
IntSet IntSet:: add(int x) //adaugam elemente de tip int
{
    IntSet aux(nr);
    int i;
    aux.v=v;
    aux.indice=indice;
    aux.nr=nr;

    if(indice==nr)          //verificam daca mai putem adauga elemente
    {
      cout<<"multime plina"<<'\n';
      return aux;
    }

    else{
       if(aux.contains(x) == true)      // verificam daca elementul exista deja
       {
          cout<<"elementul exista!";
         return aux;
       }

        else {
          aux.v[indice++]=x;
              }
         aux.indice=indice;
          return aux;}
          }
bool IntSet:: contains(int x)
{
   int i;
    for ( i=0 ; i<nr ; i++)
    if( v[i] == x ) return true;
    return false;
}

IntSet IntSet:: stergere(int x)
{
    int i,j;
    IntSet aux(nr);
    aux.v=v;
    aux.indice=indice;
    aux.nr=nr;

    if (aux.contains(x) == true)
    {
        for( i=0 ; i<indice ; i++ )
          if( aux.v[i] == x )
            {
                for(j=i ; j<indice-1 ; j++)
                    aux.v[j]=aux.v[j+1];
                    aux.indice--;
            }
        cout<<"Element gasit!";
    }


     else
     {
         cout<<"elementul nu exista in multime!";
     }
     return aux;

}
int main()
{
    IntSet x(10);
    int i,nr,introd,sterg;

    cout<<"Cate numere doriti a introduce?"<<'\n';
    cin>>nr;


    for(i=0 ; i<nr; i++)
    {
      cin>>introd;
        x=x.add(introd);
    }

     x.afisare();

     cout<<'\n'<<"Elementul de sters=  ";
     cin>>sterg;

     x=x.stergere(sterg);
     cout<<'\n'<<"In urma stergerii: ";
     x.afisare();


    return 0;
}

